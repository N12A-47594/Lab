#include <iostream>
#include <cstdlib>
#include <time.h>

using namespace std;

int n;
int T[1];
int Suma, Srednia;

 int generateArray(int n)		//Matka
 {
	srand(time(NULL));
	for(int i=0; i<n; i++)
	{
		T[i] = rand()%100;
	}
	cout<<endl;
	
 }

int sortArray(int T[], int n)			//Pierworodna
{
	for (int j=0; j<n; j++)
	{
		for (int i=1; i<n; i++)
		{
			if (T[i-1]>T[i])
			{
				swap(T[i-1], T[i]);
			}
		}
	}
}

int averageValue(int T[], int n) 	//Malcolm
{
	for (int i=0;i<n;i++)
	{
		Suma += T[i];
	}
	
	Srednia = Suma/n;
	cout<<"Srednia: "<<Srednia<<endl;
}

int maximumValue(int T[], int n)					//Starsza Bliźniaczka
{
	cout<<"Najwieksza: "<<T[n-1]<<endl;
}

int minimumValue(int T[]) 					//Młodsza Bliźniaczka
{
	cout<<"Najmniejsza: "<<T[0]<<endl;
}

int printArray(int T[], int n) 					//Bobo
{
	cout<<"Tablica:"<<endl;
	for(int i=0; i<n; i++)
	{
		cout<<T[i]<<", ";
	}
	cout<<endl;	
}	

int main()
{
	
	
	cout<<"Podaj rozmiar Tablicy"<<endl;
	cin>>n;
	
	T[n] = generateArray(n);
	printArray(T,n);
	T[n] = sortArray(T,n);
	printArray(T,n);
	averageValue(T,n);
	minimumValue(T);
	maximumValue(T,n);
	
	return 0;
}
